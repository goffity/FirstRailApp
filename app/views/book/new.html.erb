<h1>Add new book</h1>
<%= form_for @book,:url =>{:action => "create"}, :method => "get" do |f| %>
	<p><%= label_tag(:title, "Title:") %>
	<%= f.text_field :title %></p>
	<p><%= label_tag(:price, "Price:") %>
	<%= f.text_field :price %></p>
	<p><%= label_tag(:subject_id, "Subject:") %>
	<%= f.collection_select :subject_id, Subject.find(:all), :id, :name, :prompt => "Select a Subject"%></p>
	<p><%= f.label :description, "Description" %><br />
	<%= f.text_area :description, :rows => 3 %></p>
	<%= f.submit "Create" %>
<% end %>
